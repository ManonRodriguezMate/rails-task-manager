<h1>My tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %></li>
  <p><%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?"} %></p>
  <% if task.completed == true %>
    <i class="far fa-check-square"></i>
  <% else %>
     <i class="far fa-square"></i>
  <% end %>
  <% end %>
</ul>
<%= link_to "Add a new task", new_task_path %>
